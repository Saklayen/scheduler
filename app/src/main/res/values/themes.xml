<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CurrencyConverter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppBarColorPrimary" parent="@style/Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:theme">@style/AppTheme.AppBarOverlay</item>
        <item name="android:elevation" tools:targetApi="lollipop">8dp</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="AppBar" parent="@style/Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:theme">@style/AppTheme.AppBarOverlay</item>
        <item name="android:elevation" tools:targetApi="lollipop">8dp</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="ToolbarColorPrimary" parent="Widget.MaterialComponents.Toolbar">
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
        <item name="elevation">8dp</item>
        <item name="navigationIconTint">@color/colorPrimary</item>
        <item name="titleTextColor">@color/colorPrimary</item>
        <item name="background">@android:color/white</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="theme">@style/ThemeOverlay.Toolbar</item>
    </style>

    <style name="ThemeOverlay.Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="actionMenuTextColor">@android:color/black</item>
        <item name="android:actionMenuTextColor">@android:color/black</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />


    <style name="TextSubTitle" parent="@style/TextAppearance.MaterialComponents.Subtitle1">
        <item name="lineSpacing">-2dp</item>
        <item name="android:lineSpacingExtra">-2dp</item>
    </style>

    <style name="StateTextInputLayoutSpinner" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@drawable/ic_outline_replay_circle_filled_white_24dp</item>
        <item name="hintEnabled">true</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="hintTextColor">@color/indicator_text_color</item>
        <item name="boxBackgroundColor">@color/filled_background_color</item>
    </style>

    <style name="AutoCompleteSpinner" parent="Widget.MaterialComponents.AutoCompleteTextView.FilledBox">
        <item name="android:inputType">none</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="ButtonCircular" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:paddingLeft">@dimen/spacing_huge</item>
        <item name="android:paddingRight">@dimen/spacing_huge</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:paddingTop">@dimen/spacing_medium</item>
        <item name="android:paddingBottom">@dimen/spacing_medium</item>
        <item name="android:textSize">@dimen/abc_text_size_button_material</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>
</resources>