<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.saklayen.scheduler.uii.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/navigate_to_schedule_list_fragment"
            app:destination="@id/scheduleListFragment" />
        <action
            android:id="@+id/navigate_to_schedule_fragment"
            app:destination="@id/scheduleFragment" />
    </fragment>
    <fragment
        android:id="@+id/scheduleListFragment"
        android:name="com.saklayen.scheduler.uii.schedulelist.ScheduleListFragment"
        android:label="@string/schedule_list" />
    <fragment
        android:id="@+id/scheduleFragment"
        android:name="com.saklayen.scheduler.uii.schedule.ScheduleFragment"
        android:label="@string/schedule">
        <argument android:name="appName"
            app:argType="string"/>
        <argument android:name="packageName"
            app:argType="string"/>
    </fragment>
</navigation>